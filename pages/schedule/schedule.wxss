.schedule {
  width: 100%;
  padding-bottom: 50rpx;
}

.schedule-week {
  width: 100%;
  height: 80rpx;
  background-color: #f1f1f1;
  font-size: 25rpx;
  display: table;
  padding: 10rpx 0;
}

.sweek-tab {
  width: 16.66%;
  height: 100%;
  display: table-cell;
  text-align: center;
}

.swtab-text {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}

.schedule-row {
  width: 100%;
  height: 200rpx;
  display: table;
}

.scrow-tab {
  display: table-cell;
  width: 16.66%;
  text-align: center;
  height: 150rpx;
  border-radius: 20rpx;
  font-size: 25rpx;
  padding: 25rpx 0;
  color: #fff;
  border: 1rpx solid #fff;
}

.scrow-tabno {
  background: none !important;
}

.sctab-time {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.scrow-tab:first-child {
  background-color: #f1f1f1 !important;
  color: #000 !important;
}

.sctab-course {
  width: 100%;
}

.sctab-name {
  width: 100%;
  height: 35rpx;
  line-height: 35rpx;
}

.schedule-row:nth-child(2) .scrow-tab {
  background-color: #82e86b;
}

.schedule-row:nth-child(3) .scrow-tab {
  background-color: #f9c25d;
}

.schedule-row:nth-child(4) .scrow-tab {
  background-color: #fb9ed9;
}

.schedule-row:nth-child(5) .scrow-tab {
  background-color: #8baffd;
}

.schedule-row:nth-child(6) .scrow-tab {
  background-color: #79f0a5;
}

.sel-text {
  font-size: 30rpx;
  float: left;
}

.sel-week {
  width: 120rpx;
  height: 40rpx;
  background-color: #52a936;
  float: left;
  border-radius: 6rpx;
  display: block;
  text-align: center;
}

.sel-down {
  width: 0;
  height: 0;
  border-width: 12rpx 12rpx 0;
  border-style: solid;
  border-color: #fff transparent transparent; /*灰 透明 透明 */
  position: relative;
  display: inline-block;
  top: -6rpx;
  margin-left: 20rpx;
}

.sel-picker {
  display: inline-block;
  font-size: 30rpx;
  position: relative;
  top: -3rpx;
  color: #fff;
}

.schedule-sel {
  padding-top: 50rpx;
  width: 300rpx;
  margin: auto;
  padding-bottom: 70rpx;
}

.schedule-btn {
  width: 350rpx;
  height: 80rpx;
  margin: auto;
  clear: both;
  line-height: 80rpx;
  border: none;
  background-color: #52a936;
  font-size: 30rpx;
  color: #fff;
}
